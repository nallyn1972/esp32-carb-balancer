{
  "configurations": [
    {
      "name": "ESP-IDF (Linux)",
      "compilerPath": "${config:idf.toolsPath}/tools/xtensa-esp-elf/*/xtensa-esp-elf/bin/xtensa-esp32s3-elf-gcc",
      "compileCommands": "${workspaceFolder}/build/compile_commands.json",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "linux-gcc-x64",
      "includePath": [
        "${workspaceFolder}/**",
        "${config:idf.espIdfPath}/components/**",
        "${workspaceFolder}/build/config"
      ],
      "defines": [
        "ESP_PLATFORM",
        "IDF_VER",
        "_GNU_SOURCE",
        "_POSIX_READER_WRITER_LOCKS"
      ]
    },
    {
      "name": "ESP-IDF (Windows)",
      "compilerPath": "${config:idf.toolsPathWin}/tools/xtensa-esp-elf/*/xtensa-esp-elf/bin/xtensa-esp32s3-elf-gcc.exe",
      "compileCommands": "${workspaceFolder}/build/compile_commands.json",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "windows-gcc-x64",
      "includePath": [
        "${workspaceFolder}/**",
        "${config:idf.espIdfPath}/components/**",
        "${workspaceFolder}/build/config"
      ],
      "defines": [
        "ESP_PLATFORM",
        "IDF_VER",
        "_GNU_SOURCE",
        "_POSIX_READER_WRITER_LOCKS"
      ]
    },
    {
      "name": "ESP-IDF (macOS)",
      "compilerPath": "${config:idf.toolsPath}/tools/xtensa-esp-elf/*/xtensa-esp-elf/bin/xtensa-esp32s3-elf-gcc",
      "compileCommands": "${workspaceFolder}/build/compile_commands.json",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "macos-gcc-x64",
      "includePath": [
        "${workspaceFolder}/**",
        "${config:idf.espIdfPath}/components/**",
        "${workspaceFolder}/build/config"
      ],
      "defines": [
        "ESP_PLATFORM",
        "IDF_VER",
        "_GNU_SOURCE",
        "_POSIX_READER_WRITER_LOCKS"
      ]
    }
  ],
  "version": 4
}
